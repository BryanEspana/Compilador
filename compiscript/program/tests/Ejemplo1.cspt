class Persona {
  let nombre: string;
  let edad: integer;
  let color: string;
  
  function constructor(nombre: string, edad: integer) {
    this.nombre = nombre;
    this.edad = edad;
    this.color = "rojo";
  }

  function saludar(): string {
    return "Hola, mi nombre es " + this.nombre;
  }

  function incrementarEdad(anos: integer): void {
    this.edad = this.edad + anos;
    print("Ahora tengo " + this.edad + " anos.");
  }
}

class Estudiante : Persona {
  let grado: integer;
  
  function constructor(nombre: string, edad: integer, grado: integer) {
    // Llamar al constructor de la clase padre
    this.nombre = nombre;
    this.edad = edad;
    this.grado = grado;
  }

  function estudiar(): string {
    return this.nombre + " esta estudiando en " + this.grado + " grado.";
  }

  function promedioNotas(nota1: integer, nota2: integer, nota3: integer): integer {
    let promedio: integer = (nota1 + nota2 + nota3) / 3;
    print("El promedio de " + this.nombre + " es " + promedio);
    return promedio;
  }
}

let nombre: string = "Erick";

let juan: Estudiante = new Estudiante(nombre, 20, 3);
print(juan.saludar());    // Salida: Hola, mi nombre es Erick
print(juan.estudiar());   // Salida: Erick esta estudiando en 3 grado
juan.incrementarEdad(5);

for (let i: integer = 1; i <= 5; i = i + 1) {
  if (i % 2 == 0) {
    print(i + " es par");
  } else {
    print(i + " es impar");
  }
}

// Expresion aritmetica
let resultado: integer = (juan.edad * 2) + (5 - 3) / 2;
print("Resultado de la expresion: " + resultado);